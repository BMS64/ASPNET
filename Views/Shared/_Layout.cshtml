@using OnlineMarketplace.Data
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Marketplace</title>


    <!-- Front -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
    <link rel="apple-touch-icon" sizes="76x76" href="/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/assets/img/favicon.png">
    <link href="/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="/assets/css/nucleo-svg.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link id="pagestyle" href="/assets/css/material-kit.css?v=3.1.0" rel="stylesheet" />
    <!-- #endregion -->

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineMarketplace.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">


</head>
<body class="index-page bg-gray-200">
    <header class="header-2">
        
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bolder ms-sm-3" data-placement="bottom">
                    Online Marketplace
                </a>
                <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon mt-2">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </span>
                </button>
                <div class="collapse navbar-collapse pt-3 pb-2 py-lg-0" id="navigation">
                    <ul class="navbar-nav navbar-nav-hover ms-lg-12 ps-lg-5 w-100">
                        <li class="nav-item dropdown dropdown-hover mx-2">
                            <a class="nav-link ps-2 cursor-pointer d-flex align-items-center" id="dropdownMenuPages1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="material-symbols-rounded opacity-6 me-2 text-md">dashboard</i>
                                Sections
                                <img src="/assets/img/down-arrow-dark.svg" alt="down-arrow" class="arrow ms-auto ms-md-2">
                            </a>
                            <div class="dropdown-menu dropdown-menu-animation ms-n3 dropdown-md p-3 border-radius-lg mt-0 mt-lg-3" aria-labelledby="dropdownMenuPages">
                                @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                                {
                                    <a asp-action="Index" asp-controller="Category" class="dropdown-item border-radius-md">Categories</a>
                                    <a asp-action="Users" asp-controller="Account" class="dropdown-item border-radius-md">Users</a>
                                    
                                }

                                <a asp-action="Index" asp-controller="Products" class="dropdown-item border-radius-md">Products</a>
                            </div>

                        </li>

                        <li class="nav-item dropdown dropdown-hover mx-2">
                            <a class="nav-link ps-2 cursor-pointer d-flex align-items-center" id="dropdownMenuPages1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="material-symbols-rounded opacity-6 me-2 text-md">dashboard</i>
                                Help
                                <img src="/assets/img/down-arrow-dark.svg" alt="down-arrow" class="arrow ms-auto ms-md-2">
                            </a>
                            <div class="dropdown-menu dropdown-menu-animation ms-n3 dropdown-md p-3 border-radius-lg mt-0 mt-lg-3" aria-labelledby="dropdownMenuPages">
                                <a asp-action="AboutUs" asp-controller="Home" class="dropdown-item border-radius-md">About Us</a>
                                <a asp-action="ContactUs" asp-controller="Home" class="dropdown-item border-radius-md">Contact Us</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown dropdown-hover mx-2">
                            <a class="nav-link ps-2 cursor-pointer d-flex align-items-center" id="dropdownMenuPages1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="material-symbols-rounded opacity-6 me-2 text-md">dashboard</i>
                                Account
                                <img src="/assets/img/down-arrow-dark.svg" alt="down-arrow" class="arrow ms-auto ms-md-2">
                            </a>
                            <div class="dropdown-menu dropdown-menu-animation ms-n3 dropdown-md p-3 border-radius-lg mt-0 mt-lg-3" aria-labelledby="dropdownMenuPages">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    if (User.IsInRole(UserRoles.User))
                                    {
                                    <a asp-action="Profile" asp-controller="Customers" class="dropdown-item border-radius-md">Profile</a>
                                    <a asp-action="Index" asp-controller="Orders" class="dropdown-item border-radius-md">Your Orders</a>
                                    }
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item border-radius-md">Log Out</button>
                                    </form>
                                } else {
                                <a asp-action="Login" asp-controller="Account" class="dropdown-item border-radius-md">Log In</a>
                                }
                            </div>
                        </li>
                        <li class="nav-item ms-lg-auto my-auto ms-3 ms-lg-0 mt-2 mt-lg-0">
                            <img src="/assets/img/cart.png" alt="cart" class="arrow ms-auto ms-md-2">
                            <a asp-action="Index" asp-controller="Cart" class="btn btn-sm  bg-gradient-dark  mb-0 me-1 mt-2 mt-md-0">Cart</a>
                        </li>
                </ul>
            </div>
            </div>
        </nav>
        <!-- End Navbar -->
        @await RenderSectionAsync("MyHeader", false)

    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="footer pt-5 mt-5">
        <div class="container">
            <div class=" row">
                <div class="col-md-3 mb-4 ms-auto">
                    <div>
                        <a asp-controller="Home" asp-action="Index">
                            <img src="/assets/img/logo-ct-dark.png" class="mb-3 footer-logo" alt="main_logo">
                        </a>
                        <h6 class="font-weight-bolder mb-4">Online Marketplace</h6>
                    </div>
                    <div>
                        <ul class="d-flex flex-row ms-n3 nav">
                            <li class="nav-item">
                                <a class="nav-link pe-1" href="#" target="_blank">
                                    <i class="fab fa-facebook text-lg opacity-8"></i>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link pe-1" href="#" target="_blank">
                                    <i class="fab fa-twitter text-lg opacity-8"></i>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link pe-1" href="#" target="_blank">
                                    <i class="fab fa-dribbble text-lg opacity-8"></i>
                                </a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link pe-1" href="#" target="_blank">
                                    <i class="fab fa-github text-lg opacity-8"></i>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link pe-1" href="#" target="_blank">
                                    <i class="fab fa-youtube text-lg opacity-8"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-2 col-sm-6 col-6 mb-4">
                    <div>
                        <h6 class="text-sm">Company</h6>
                        <ul class="flex-column ms-n3 nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="AboutUs" asp-controller="Home" target="_blank">
                                    About Us
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Premium Tools
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-2 col-sm-6 col-6 mb-4">
                    <div>
                        <h6 class="text-sm">Help & Support</h6>
                        <ul class="flex-column ms-n3 nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="ContactUs" target="_blank">
                                    Contact Us
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Knowledge Center
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Custom Development
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Sponsorships
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>

                <div class="col-md-2 col-sm-6 col-6 mb-4 me-auto">
                    <div>
                        <h6 class="text-sm">Legal</h6>
                        <ul class="flex-column ms-n3 nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Terms & Conditions
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="Privacy" asp-controller="Home" target="_blank">
                                    Privacy Policy
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="#" >
                                    Licenses (EULA)
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-12">
                    <div class="text-center">
                        <p class="text-dark my-4 text-sm font-weight-normal">
                            All rights reserved. Copyright © <script>document.write(new Date().getFullYear())</script> - Online Marketplace
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    <!-- Bootstrap JavaScript (includes Popper.js for dropdowns) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
