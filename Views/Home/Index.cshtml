@model IEnumerable<Category>

@{
    ViewData["Title"] = "Home Page";
}

@section MyHeader
{
    <div class="page-header min-vh-75 relative" style="background-image: url('/assets/img/bg-prim.png')">
        <span class="mask bg-gradient-dark opacity-4"></span>
        <div class="container">
            <div class="row">
                <div class="col-lg-7 text-center mx-auto">
                    <h1 class="text-white font-weight-black pt-3 mt-n5">Online Marketplace</h1>
                    <p class="lead text-white mt-3">Welcome to our online shop! Discover a variety of quality products, enjoy easy shopping, and fast delivery. Happy shopping!</p>
                </div>
            </div>
        </div>
    </div>
}


<div class="card card-body shadow-xl mx-3 mx-md-4 mt-n6">
    <div class="container text-center">
        <h2>Shop By Category</h2>
        <div class="row mt-4">
            @foreach (var category in Model)
            {
                <div class="col-md-3 mb-4">
					<a asp-action="Index" 
					   asp-controller="Products" 
					   asp-route-categoryId="@category.Id" 
					   class="btn btn-primary d-flex align-items-center text-decoration-none">
					   <i class="bi bi-box-seam me-2"></i>
						<h5 class="card-title">@category.Name</h5>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
